{
  "manifest_version": 2,

  "version": "1.0.0",
  
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",

  "browser_action": {
    "default_title": "Options",
    "default_icon": "img/icon.png"
  },
  "icons": {
    "16": "img/icon.png",
    "32": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "page": "bg.html"
  },
  "omnibox": {
    "keyword": "h"
  },
  "web_accessible_resources": [
    "img/*",
    "scripts/*"
  ],
  "permissions": [
    "background",
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}